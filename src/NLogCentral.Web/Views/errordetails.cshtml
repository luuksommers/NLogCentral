@{
    Layout = "Master.cshtml";
}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NLogCentral.Web.Models.ErrorDetailsViewModel>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-exclamation-circle fa-fw"></i> Error details</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label>Id</label>
                    @Model.Error.Id
                </div>
                <div class="form-group">
                    <label>Message</label>
                    @Model.Error.Message
                </div>
                <div class="form-group">
                    <label>Stacktrace</label>
                    @Model.Error.StackTrace
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
